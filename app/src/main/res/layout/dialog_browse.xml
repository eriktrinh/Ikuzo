<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/browse_year_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        app:ms_dropdown_height="200dp"
        app:ms_dropdown_max_height="200dp"
        tools:text="2017" />

    <TextView
        android:id="@+id/browse_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/browse_year_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/browse_year" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/browse_season_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/browse_year_spinner"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/browse_season_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/browse_season_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/browse_season" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/browse_status_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/browse_season_spinner"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/browse_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/browse_status_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/browse_status" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/browse_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/browse_status_spinner"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/browse_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/browse_type_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/browse_type" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/browse_sort_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/browse_type_spinner"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/browse_sort_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/browse_sort_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/browse_sort" />

    <CheckBox
        android:id="@+id/browse_desc_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/browse_sort_spinner" />

    <TextView
        android:id="@+id/browse_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/browse_desc_checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/browse_desc" />
</RelativeLayout>
